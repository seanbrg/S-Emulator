<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.components.login.LoginController">
    <top>
        <Label text="S-Emulator" BorderPane.alignment="CENTER" style="-fx-font-size: 24px; -fx-padding: 20px;" />
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="20" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="errorMessageLabel" style="-fx-text-fill: red;" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets left="30.0" right="30.0"/>
                    </VBox.margin>
                </Label>
                <HBox prefHeight="50.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="User Name:" prefWidth="100.0">
                            <HBox.margin>
                                <Insets left="30.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="userNameTextField" prefWidth="300.0">
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0" alignment="CENTER" spacing="30">
                    <children>
                        <Button onAction="#handleLogin" text="Login" prefWidth="100.0" />
                        <Button onAction="#handleQuit" text="Quit" prefWidth="100.0" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>