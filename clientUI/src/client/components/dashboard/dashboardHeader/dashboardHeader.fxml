<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.components.dashboard.dashboardHeader.DashboardHeaderController">
   <children>
      <HBox>
         <children>
            <Label text="User Name :">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="userNameLable">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
            <Label text="Available Credits :">
               <HBox.margin>
                  <Insets left="270.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="availableCreditsLable" text="0">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
         </children>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </HBox>

      <HBox>
         <children>
            <Button fx:id="loadFileButton" mnemonicParsing="false" text="Load File">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <Label fx:id="filePath" text="filePath">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
            <ProgressBar fx:id="progressBar" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="100.0" progress="0.0">
               <HBox.margin>
                  <Insets left="100.0" />
               </HBox.margin>
            </ProgressBar>

            <TextField fx:id="creditsTextField" promptText="Enter credits">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="chargeCreditsButton" mnemonicParsing="false" text="Charge Credits">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
   </children>
</VBox>
