<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.components.dashboard.dashboardHeader.DashboardHeaderController">
   <children>
      <HBox prefHeight="26.0" prefWidth="600.0">
         <children>
            <Label text="User Name :">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="userNameLable">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
            <Label text="Available Credits :">
               <HBox.margin>
                  <Insets left="250.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="availableCreditsLable" text="0">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
         </children>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </HBox>

      <HBox prefHeight="100.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Button fx:id="loadFileButton" mnemonicParsing="false" text="Load File">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
            <Label fx:id="filePath" text="filePath">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>

            <TextField fx:id="creditsTextField" promptText="Enter credits" prefWidth="100.0">
               <HBox.margin>
                  <Insets left="120.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="chargeCreditsButton" mnemonicParsing="false" text="Charge Credits" />
         </children>
      </HBox>
   </children>
</VBox>
