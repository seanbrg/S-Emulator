<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.components.dashboard.userHistory.UserHistoryController">

   <top>
      <VBox spacing="10" styleClass="section-header">
         <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
         </padding>
         <Label style="-fx-font-size: 16px;" styleClass="section-title" text="User Run History" />
         <Separator />
      </VBox>
   </top>

   <center>
      <TableView fx:id="userHistoryTable" styleClass="data-table">
         <columns>
            <TableColumn fx:id="columnRunNumber" prefWidth="60" styleClass="table-column" text="Run #" />
            <TableColumn fx:id="columnType" prefWidth="100" styleClass="table-column" text="Type" />
            <TableColumn fx:id="columnProgramName" prefWidth="140" styleClass="table-column" text="Program/Function" />
            <TableColumn fx:id="columnArchitecture" prefWidth="110" styleClass="table-column" text="Architecture" />
            <TableColumn fx:id="columnRunLevel" prefWidth="60" styleClass="table-column" text="Level" />
            <TableColumn fx:id="columnOutputValue" prefWidth="80" styleClass="table-column" text="Output (y)" />
            <TableColumn fx:id="columnCycles" prefWidth="80" styleClass="table-column" text="Cycles" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>

   <bottom>
      <HBox alignment="CENTER" spacing="10" styleClass="button-bar">
         <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
         </padding>
         <Button fx:id="showStatusButton" onAction="#onShowStatus" text="Show Status" />
         <Button fx:id="rerunButton" onAction="#onRerun" text="Re-run" />
      </HBox>
   </bottom>

   <padding>
      <Insets bottom="5" left="5" right="5" top="5" />
   </padding>
</BorderPane>
