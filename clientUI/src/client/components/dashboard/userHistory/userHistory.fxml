<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="client.components.dashboard.userHistory.UserHistoryController">

   <top>
      <VBox spacing="10" styleClass="section-header">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
         </padding>
         <Label text="User Run History" styleClass="section-title"/>
         <Separator/>
      </VBox>
   </top>

   <center>
      <TableView fx:id="userHistoryTable" styleClass="data-table">
         <columns>
            <TableColumn fx:id="columnRunNumber" text="Run #" prefWidth="60" styleClass="table-column"/>
            <TableColumn fx:id="columnType" text="Type" prefWidth="120" styleClass="table-column"/>
            <TableColumn fx:id="columnProgramName" text="Program/Function" prefWidth="180" styleClass="table-column"/>
            <TableColumn fx:id="columnArchitecture" text="Architecture" prefWidth="130" styleClass="table-column"/>
            <TableColumn fx:id="columnRunLevel" text="Level" prefWidth="70" styleClass="table-column"/>
            <TableColumn fx:id="columnOutputValue" text="Output (y)" prefWidth="100" styleClass="table-column"/>
            <TableColumn fx:id="columnCycles" text="Cycles" prefWidth="90" styleClass="table-column"/>
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
         </columnResizePolicy>
      </TableView>
   </center>

   <bottom>
      <HBox spacing="10" alignment="CENTER_LEFT" styleClass="button-bar">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
         </padding>
         <Button fx:id="showStatusButton" text="Show Status" onAction="#onShowStatus"/>
         <Button fx:id="rerunButton" text="Re-run" onAction="#onRerun"/>
      </HBox>
   </bottom>

   <padding>
      <Insets top="5" right="5" bottom="5" left="5"/>
   </padding>
</BorderPane>